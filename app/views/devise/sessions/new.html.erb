<div class="sign-in-image" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1546195643-70f48f9c5b87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="sign-in-card">
    <div id="mangetoo-logo">
      <p>MangeToo</p>
      <!-- <div id="mangetoo-image"> -->
      <%= image_tag "MangeToo_MangeTooImage.png", alt: "Image of a mangetout cartoon", width: 180, class: "mangetoo-image" %>
      <!-- </div> -->
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, class: "signin-input" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, class: "signin-input" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "LOG IN" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "sign-in-links" %>
  </div>
</div>



