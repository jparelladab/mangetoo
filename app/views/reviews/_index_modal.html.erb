<div class="modal fade" id="reviewIndexModal<%= review_hash[:review_id] %>" tabindex="-1" role="dialog" aria-labelledby="reviewIndexModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="title_and_rating">
        <div class="modal-header-and-stars"> <h5 class="modal-title " id="reviewIndexModalTitle"><%= review_hash[:restaurant_name] %></h5>
          <div class="star-container">
            <% count_gold = review_hash[:review_rating] %>
            <% count_grey = (5 - count_gold) %>
            <% count_gold.times do %> <i class="fas fa-star gold-star"></i> <% end %>
            <% count_grey.times do %> <i class="fas fa-star grey-star"></i> <% end %>
          </div>
        </div>
      </div>
      <div class="modal-header d-flex flex-column">
        <p><%= review_hash[:restaurant_address] %>, <%= review_hash[:restaurant_city] %></p>
        <div class="modal-review-details">
          <p>Visited on: <%= review_hash[:visit_date] %> | Review from: <%= review_hash[:review_date] %></p>
        </div>
      </div>
      <div class="modal-body" style="font-size: 16px">
       <em>"<%= review_hash[:review_content] %>"</em>
      </div>
      <div class="modal-footer">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
