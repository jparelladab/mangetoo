<div class="d-flex align-items-center flex-column">
  <div class="photo-carousel new-review-carousel">
    <% if @restaurant.photos.attached? %>
      <div id="carousel-<%= @restaurant.id %>" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @restaurant.photos.each_with_index do |photo, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <%= cl_image_tag photo.key, class: "main-image d-block w-100" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carousel-<%= @restaurant.id %>" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-<%= @restaurant.id %>" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% else %>
      <img src="https://www.luxuryrestaurantguide.com/Pictures/973_FiveFieldsIMG_4280.jpg" class="showpage-image" alt="Photo of restaurant interior">
    <% end %>
  </div>
  <div class="review-form-container d-flex flex-column">
    <h3 class="review-form-header">Write your review of <%= @restaurant.name %> below:</h3>
    <br>
    <div id="new-review-form">
      <%= simple_form_for(@review, url: visit_reviews_path(@visit)) do |f| %>
        <%= f.input :content, :as => :text, placeholder: "Write your review here...", input_html: { class: "content-form" } %>
          <div class="rating-select d-flex justify-content-center">
            <p>Rate <%= @restaurant.name %>*:</p>
            <%= f.input :rating, :as => :integer, input_html: { :style=> 'width: 10%;' } %>
          </div>
          <small class="form-text text-muted">*Rating must be between 1-5.</small>
          <div class="review-btn d-flex justify-content-center">
            <%= f.submit "Add Review", class: "bannerbtn" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
