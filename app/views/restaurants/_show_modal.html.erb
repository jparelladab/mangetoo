<div class="modal fade" id="reviewShowModal<%= review.id %>" tabindex="-1" role="dialog" aria-labelledby="reviewShowModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex flex-column">
        <div class="modal-header-and-stars"> <h5 class="modal-title " id="reviewShowModalTitle"><%= review.visit.restaurant.name %> </h5>
          <div class="star-container">
            <% count_gold = review.rating %>
            <% count_grey = (5 - count_gold) %>
            <% count_gold.times do %> <i class="fas fa-star gold-star"></i> <% end %>
            <% count_grey.times do %> <i class="fas fa-star grey-star"></i> <% end %>
          </div>
        </div>
        <p><%= review.visit.restaurant.address %>, <%= review.visit.restaurant.city %></p>
        <div class="modal-review-details">
          <p> Visited on: <%= review.visit.date.strftime("%d/%m/%y") %> | Review from: <%= review.created_at.strftime("%d/%m/%y") %></p>
        </div>
      </div>
      <div class="modal-body" style="font-size: 16px">
        <%= review.content %>
      </div>
      <div class="modal-footer">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>

