
<div class="card">
  <% if restaurant.photos.attached? %>
    <div id="carousel-<%= restaurant.id %>" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% restaurant.photos.each_with_index do |photo, i| %>
          <div class="carousel-item <%= 'active' if i == 0 %>">
            <%= cl_image_tag photo.key, class: "card-img-top d-block w-100" %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carousel-<%= restaurant.id %>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-<%= restaurant.id %>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% else %>
    <%= image_tag "MangeToo_DefaultUserImage.png", alt: "Image of a mangetout cartoon", class: "card-img-top", style: "height: 150px; object-fit: contain; overflow: hidden" %>
  <% end %>
  <div class="card-body">
    <h5 class="category-tag"> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h5>
    <p class="card-title"><%= restaurant.address %></p>
  </div>
</div>
