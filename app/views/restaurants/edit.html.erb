<h1>Restaurant edit</h1>

<div class="container-form card" >
  <div class="edit_form"> <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name, :as => :string, input_html: { :style=> 'width: 400px;' }%>
    <%= f.input :address, :as => :string, input_html: { :style=> 'width: 400px;' }%>
    <%= f.input :city, :as => :string, input_html: { :style=> 'width: 400px;' } %>
    <%= f.input :latitude, :as => :float, input_html: { :style=> 'width: 400px;' } %>
    <%= f.input :longitude, :as => :float, input_html: { :style=> 'width: 400px;' } %>
    <%= f.input :category, :as => :string, input_html: { :style=> 'width: 400px;' } %>
    <%= f.input :website, :as => :string, input_html: { :style=> 'width: 400px;' } %>
    <%= f.input :phone_number, :as => :string, input_html: { :style=> 'width: 400px;' } %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Update Restaurant", class: "bannerbtn", input_html: { :style=> 'padding: 10px;' }%>
  <% end %>
  </div>
</div>
