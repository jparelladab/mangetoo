<div class="modal fade home_modal" id="reviewHomeModal" <%= review.first.id %>" tabindex="-1" role="dialog" aria-labelledby="reviewHomeModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex flex-column">
          <h5 class="modal-title-name " id="reviewIndexModalTitle"><%= review.first.visit.restaurant.name %></h5>
        <p><%= review.first.visit %>, <%= review.first.visit.restaurant.city %></p>
        <div class="modal-review-details">
          <p>Rating: <%= review.first.rating%> | Visited on: <%= review.first.visit.date %> | Review from: <%= review.first.created_at %></p>
        </div>
      </div>
      <div class="modal-body" style="font-size: 16px">
        <%= review.first.content %>
      </div>
      <div class="modal-footer homepage-spacer-flex">
       <p> <%= review.first.visit.user.first_name %> <%= review.first.visit.user.last_name %> </p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
