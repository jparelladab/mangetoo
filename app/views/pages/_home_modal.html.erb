<div class="modal fade" id="reviewHomeModal<%= review.id %>" tabindex="-1" role="dialog" aria-labelledby="reviewHomeModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="title_rating">
          <h5 class="modal-title-name " id="reviewHomeModalTitle"><%= review.visit.restaurant.name %></h5>
          <div class="star-container">
            <% count_gold = review.rating %>
            <% count_grey = (5 - count_gold) %>
            <% count_gold.times do %> <i class="fas fa-star gold-star"></i> <% end %>
            <% count_grey.times do %> <i class="fas fa-star grey-star"></i> <% end %>
          </div>
        </div>
      <div class="modal-header d-flex flex-column">
        <p><%= review.visit.restaurant.address %></p>
        <div class="modal-review-details">
          <p> Visited on: <%= review.visit.date.strftime("%d/%m/%y") %> | Review from: <%= review.created_at.strftime("%d/%m/%y") %></p>
        </div>
      </div>
      <div class="modal-body">
        <em>"<%= review.content %>"</em>
      </div>
      <div class="modal-footer homepage-spacer-flex">
       <p>Review by: <%= review.visit.user.first_name %> <%= review.visit.user.last_name %> </p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
