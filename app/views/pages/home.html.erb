<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1553194588-6ba2cd5b410f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
  <br>
    <div class="d-flex justify-content-center">
      <div class = "col-8"> <%= form_tag restaurants_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search by city" %>
      </div>
      <div>
        <%= submit_tag "Search", class: "bannerbtn" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<br>
<br>

<div class="card-container">
  <% @reviews_array.each do |review_hash| %>
    <div class="card-home">
      <%=image_tag("Headshot_2.jpg")%>
      <div class="card-home-infos">
        <div class="name_date_flex">
        <h3><%= review_hash[:user_first_name] %> <%= review_hash[:user_last_name] %></h3>
        <p class="home-date"> Review date: <%= review_hash[:review_date] %></p>
        </div>
        <h2><%= review_hash[:restaurant_name] %></h2>
        <p><%= review_hash[:review_content_truncated] %> <a href="#" class="see_more_btn" data-toggle="modal" data-target="#reviewHomeModal<%= review_hash[:review_id] %>">See More</a>
            <%= render partial: 'home_modal', locals: {review_hash: review_hash} %></p>
         </div>
    </div>
  <% end %>

    <% @friend_reviews.each do |r| %>
    <%= r[0].content %>

  <% end %>
</div>

