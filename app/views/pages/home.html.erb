<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1553194588-6ba2cd5b410f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
  <br>
    <div class="d-flex justify-content-center home-search">
      <div class = "col-8"> <%= form_tag restaurants_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search for a city to see your Fellow Foodies' top eateries..." %>
      </div>
      <div>
        <%= submit_tag "Search", class: "bannerbtn" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<br>
<br>
<h3 id="home-title"><em>Welcome to your Foodie Feed! See your Fellow Foodies' latest reviews...</em></h3>
<br>
<br>

  <div class="card-container">
    <% @reviews.each do |review| %>
      <% if !review.nil? %>
        <div class="card-home">
          <%=image_tag(review.visit.user.default_image)%>
          <div class="card-home-infos">
            <div class="name_date_flex">
              <h3><%= review.visit.user.first_name %> <%= review.visit.user.last_name %></h3>
              <% if review.visit.date.strftime("%d/%m/%y") < current_user.last_seen_at.strftime("%d/%m/%y") %>
                <div class="new_review">New!</div>
              <% end %>
              <p class="home-date"> Review date: <%= review.visit.date.strftime("%d/%m/%y") %></p>
            </div>
            <h2><%= link_to review.visit.restaurant.name, restaurant_path(review.visit.restaurant) %></h2>
            <p><%= review.content.truncate(100) %> <a href="#" class="see_more_btn" data-toggle="modal" data-target="#reviewHomeModal<%= review.id %>"> See More</a>
              <%= render partial: 'home_modal', locals: {review: review} %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

