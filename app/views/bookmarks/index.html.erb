<div class="d-flex align-items-center flex-column">
  <div
  id="map"
  style="width: 90%;
  height: 450px;
  margin-top: 25px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  <br>
  <h2 class="bookmarks-title">Bookmarked Restaurants</h2>
  <h5 class="bookmarks-title"><em>Bookmark a restaurant, and it will appear here as part of your personal foodie map.</em></h5>
  <div class="d-flex justify-content-between align-items-center flex-column">
    <% @bookmarked_restaurants.each do |restaurant| %>
      <%= render 'bookmarks-restaurant-card', restaurant: restaurant %>
    <% end %>
  </div>
</div>
