<div class="modal fade" id="visitsIndexModal<%= visit.restaurant_id %>" tabindex="-1" role="dialog" aria-labelledby="visitsIndexModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex flex-column">
        <h5 class="modal-title " id="visitsIndexModalTitle"> <%= visit.restaurant.name %></h5>
        <div class="modal-review-details">
          <% if visit.reviews.first.nil? %>
          <p>Rating: <%= visit.reviews.first.rating %> | Visited on: <%= visit.date.strftime("%d/%m/%y") %> | Review from: <%= visit.reviews.first.date %></p>
          <% end %>
        </div>
      </div>
      <div class="modal-body" style="font-size: 16px">
        <% if !visit.reviews.first.nil? %>
        <h5>Your review: </h5>
        <br>
        <em>"<%= visit.reviews.first.content %>"</em>
          <div class="star-container d-flex justify-content-center pt-3">
            <br>
            <% count_gold = visit.reviews.first.rating %>
            <% count_grey = (5 - count_gold) %>
            <% count_gold.times do %> <i class="fas fa-star gold-star"></i> <% end %>
            <% count_grey.times do %> <i class="fas fa-star grey-star"></i> <% end %>
          </div>
         <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
