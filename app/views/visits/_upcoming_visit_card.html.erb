<div class="restaurant_card">
  <div class="restaurant_card_carousel">
    <%= render 'shared/restaurant_carousel_visit', locals: {:visit => visit, :restaurant => restaurant} %>
  </div>
  <div class="restaurant_card_info">

    <div class="restaurant_info_strip">
      <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    </div>

    <div class="restaurant_info_strip">
      <p>
        <%= image_tag("category.svg") %> <%= restaurant.category %>
      </p>
    </div>

    <div class="restaurant_info_strip">
      <p>
        <%= image_tag("city.svg") %> <%= restaurant.city %> <br>
        <%= image_tag("address.svg") %> <%= restaurant.address %> <br>
        <%= image_tag("people.svg") %> <%= visit.number_of_people %> <br>
        <%= image_tag("calendar.svg") %> <%= visit.date.strftime("%d/%m/%y") %> <br>
      </p>
    </div>

    <div class="buttons-info" style="align-items: center;">
      <%= link_to visits_path, class: "hollowbtn upcoming-visit-btn" do %>
        <i class="fas fa-edit"></i> Change
      <% end %>
      <%= link_to visit_path(visit), method: 'delete', class: "hollowbtn upcoming-visit-btn" do %>
        <i class="fas fa-trash-alt"></i> Cancel
      <% end %>
    </div>
  </div>
</div>
