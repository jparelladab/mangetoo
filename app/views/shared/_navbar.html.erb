<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "MangeToo", root_path, class: "navbar-brand mangetoo-logo" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My Bookmarks", bookmarks_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Reviews", reviews_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Visits", visits_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, alt: "Image of user", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "MangeToo_DefaultUserImage.png", alt: "Image of user", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "All Restaurants", restaurants_path, class: "dropdown-item" %>
            <%= link_to "Foodie Network", follows_path, class: "dropdown-item" %>
            <%= link_to "New Restaurant", new_restaurant_path, class: "dropdown-item" %>
            <%= link_to "Update Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
